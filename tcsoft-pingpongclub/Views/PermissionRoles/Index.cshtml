@model IEnumerable<tcsoft_pingpongclub.Models.PermissionRole>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/table-style.css">
</head>
<body>
    <h1>Quản lý quyền truy cập</h1>
    <h1>@ViewBag.role.NameRole</h1>

<p>
        <a asp-action="Create" asp-route-id="@ViewBag.role.IdRole" class="btn-create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPermissionNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPermissionNavigation.NamePermission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPermissionNavigation.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermissionNavigation.IdPermission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermissionNavigation.NamePermission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermissionNavigation.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPerRo" asp-route-idRole="@ViewBag.role.IdRole"  class="btn-edit">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPerRo" class="btn-edits">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPerRo" class="btn-delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
