@model tcsoft_pingpongclub.Models.PermissionRole

@{
    ViewData["Title"] = "Edit PermissionRole";
}
<head>
    <link rel="stylesheet" href="/css/form-style.css">
</head>

<h1>Chỉnh sửa phân quyền</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPerRo" />

            <!-- Hiển thị thông tin Role -->
            <div class="form-group">
                <label asp-for="IdRole" class="control-label"></label>
                <select asp-for="IdRole" class="form-control" asp-items="@(new SelectList(new List<tcsoft_pingpongclub.Models.Role> { ViewBag.Role }, "IdRole", "NameRole"))">
                    <option value="@ViewBag.Role.IdRole" selected>@ViewBag.Role.NameRole</option>
                </select>
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>

            <!-- Dropdown cho Permission -->
            <div class="form-group">
                <label asp-for="IdPermission" class="control-label">Permission</label>
                <select asp-for="IdPermission" class="form-control" asp-items="@(new SelectList(ViewBag.Permissions, "IdPermission", "NamePermission", Model.IdPermission))">
                    <option value="0">Chọn quyền</option>
                </select>
                <span asp-validation-for="IdPermission" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
