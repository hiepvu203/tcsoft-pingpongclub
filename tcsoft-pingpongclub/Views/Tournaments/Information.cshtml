<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
@model tcsoft_pingpongclub.Models.Tournament
<div class="container my-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6"> @Html.DisplayFor(model => model.TournamentName)</h1>
        <button class="btn btn-primary">Đăng Ký</button>
    </div>

    <!-- Tournament Details -->
    <div class="row">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.UrlImage))
            {
                <img src="@Html.DisplayFor(model => model.UrlImage)" alt="Hình ảnh giải đấu" class="img-fluid" style="height: 500px; object-fit: cover; "/>
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </div>
        <div class="col-md-4">
            <h5>Yêu Cầu:</h5>
            <p>Từ Hạng @Html.DisplayFor(model => model.RankStartNavigation.LevelName) đến Hạng @Html.DisplayFor(model => model.RankEndNavigation.LevelName)</p>
            <h5>Thông Tin Giải Đấu</h5>
            <p> @Html.DisplayFor(model => model.Infor)</p>
        </div>
    </div>

    <!-- Other Tournaments -->
    <h2 class="mt-5">Giải Đấu Khác</h2>
    <p class="text-muted">Cùng Hạng</p>
    <div class="row">
        @if (ViewBag.RelatedTournaments != null && ViewBag.RelatedTournaments.Count > 0)
        {
            foreach (var tournament in ViewBag.RelatedTournaments)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@tournament.UrlImage" class="card-img-top" alt="@tournament.TournamentName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@tournament.TournamentName</h5>
                            <p class="card-text">
                                Từ Hạng @tournament.RankStartNavigation?.LevelName đến Hạng @tournament.RankEndNavigation?.LevelName
                            </p>
                            <a href="/Tournaments/Information/@tournament.IdTournament" class="btn btn-primary">Xem Chi Tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có giải đấu nào khác cùng hạng.</p>
        }
    </div>

</div>
