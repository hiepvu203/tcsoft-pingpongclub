
@model IEnumerable<tcsoft_pingpongclub.Models.Tournament>

@{
    ViewData["Title"] = "Danh sách giải đấu";
}

<h1 class="text-center mb-4">Danh sách giải đấu</h1>
<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Tạo mới</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th style="width:200px;">Hình ảnh</th>
            <th>Tên giải đấu</th>
            <th>Loại hình (Cúp/Vòng)</th>
            <th>Thời gian bắt đầu</th>
            <th>Thời gian kết thúc</th>
            <th>Số lượng</th>
            <th>Số lượng thực tế</th>
            <th>Hạng Thấp Nhất</th>
            <th>Hạng Cao Nhất</th>
            <th>Thông tin giải đấu</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="fixed-row">
                <td>
                    <div class="d-flex justify-content-center align-items-center h-100">
                        <img src="@item.UrlImage" class="img-fluid rounded" />
                    </div>
                </td>
                <!-- Tên giải đấu -->
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.TournamentName)
                    </div>
                </td>
                <!-- Loại hình -->
                <td>
                    @if (item.Type == true)
                    {
                        @:Đấu Cúp
                    }
                    else
                    {
                        @:Đấu Vòng
                    }
                </td>
                <!-- Thời gian -->
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.TimeStart)
                    </div>
                </td>
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.TimeEnd)
                    </div>
                </td>
                <!-- Số lượng -->
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.Amount)
                    </div>
                </td>
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.ActualAmount)
                    </div>
                </td>
                <!-- Hạng -->
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.RankStartNavigation.LevelName)
                    </div>
                </td>
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.RankEndNavigation.LevelName)
                    </div>
                </td>
                <!-- Thông tin giải đấu -->
                <td>
                    <div class="scrollable-cell">
                        @Html.DisplayFor(modelItem => item.Infor)
                    </div>
                </td>
                <!-- Trạng thái -->
                <td>
                    @if (item.Status == true)
                    {
                        @:Đang Diễn Ra
                    }
                    else
                    {
                        @:Ẩn
                    }
                </td>
                <!-- Hành động -->

                <td>
                    <div class="d-flex flex-column align-items-stretch">
                        <a asp-action="Edit" asp-route-id="@item.IdTournament" class="btn btn-warning btn-sm w-100 mb-1">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.IdTournament" class="btn btn-info btn-sm w-100 mb-1">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.IdTournament" class="btn btn-danger btn-sm w-100">Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
