@model tcsoft_pingpongclub.Models.Tournament

@{
    ViewData["Title"] = "Thêm giải đấu";
}

<h1 class="text-center mb-4">Thêm giải đấu</h1>

<h4>Thông tin giải đấu</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="alert alert-danger">@error.ErrorMessage</div>
            }

            <!-- Tên giải đấu -->
            <div class="form-group mb-3">
                <label asp-for="TournamentName" class="control-label">Tên giải đấu</label>
                <input asp-for="TournamentName" class="form-control w-100" />
                <span asp-validation-for="TournamentName" class="text-danger"></span>
            </div>

            <!-- Loại hình giải đấu -->
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Loại hình</label>
                <select asp-for="Type" class="form-control w-100" asp-items="ViewBag.TypeList"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Thời gian bắt đầu -->
            <div class="form-group mb-3">
                <label asp-for="TimeStart" class="control-label">Thời gian bắt đầu</label>
                <input asp-for="TimeStart" type="datetime-local" class="form-control w-100" />
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>

            <!-- Thời gian kết thúc -->
            <div class="form-group mb-3">
                <label asp-for="TimeEnd" class="control-label">Thời gian kết thúc</label>
                <input asp-for="TimeEnd" type="datetime-local" class="form-control w-100" />
                <span asp-validation-for="TimeEnd" class="text-danger"></span>
            </div>

            <!-- Hình ảnh -->
            <div class="form-group mb-3">
                <label asp-for="ImageUpload" class="control-label">Hình ảnh</label>
                <input asp-for="ImageUpload" type="file" class="form-control w-100" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>

            <!-- Số lượng -->
            <div class="form-group mb-3">
                <label asp-for="Amount" class="control-label">Số lượng</label>
                <input asp-for="Amount" class="form-control w-100" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Xếp hạng bắt đầu -->
            <div class="form-group mb-3">
                <label asp-for="RankStart" class="control-label">Xếp hạng bắt đầu</label>
                <select asp-for="RankStart" class="form-control w-100" asp-items="ViewBag.RankStart"></select>
            </div>

            <!-- Xếp hạng kết thúc -->
            <div class="form-group mb-3">
                <label asp-for="RankEnd" class="control-label">Xếp hạng kết thúc</label>
                <select asp-for="RankEnd" class="form-control w-100" asp-items="ViewBag.RankEnd"></select>
            </div>

            <!-- Thông tin giải đấu -->
            <div class="form-group mb-3">
                <label asp-for="Infor" class="control-label">Thông tin giải đấu</label>
                <textarea asp-for="Infor" class="form-control w-100"></textarea>
                <span asp-validation-for="Infor" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <select asp-for="Status" class="form-control w-100" asp-items="ViewBag.StatusList"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Nút thêm và quay lại -->
            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Management" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
