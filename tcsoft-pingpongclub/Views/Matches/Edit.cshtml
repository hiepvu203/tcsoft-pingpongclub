@model tcsoft_pingpongclub.Models.Match

@{
    ViewData["Title"] = "Chỉnh sửa thời gian trận đấu";
}
<h1 class="text-center">Điều chỉnh thời gian</h1>
<hr />
<div class="container text-center py-4 bg-white text-dark">
    <form asp-action="Edit" class="mt-4">
        <h4>@ViewBag.nameTour</h4>
        <div class="row align-items-center">
            <!-- Team 1 -->
            <div class="col-md-4">
                <img src="/image/avata1.jpg" alt="Thái Lan" class="img-fluid" style="width: 100px;border-radius:100px;">
                <h5 class="mt-2">@ViewBag.playerName1</h5>
            </div>


            <div class="form-group col-md-4">
                <label asp-for="TimeStart" class="form-label">Thời gian bắt đầu</label>
                <input asp-for="TimeStart" class="form-control text-center" style="max-width: 200px; margin: 0 auto;">
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <img src="/image/avata1.jpg" alt="Philippines" class="img-fluid" style="width: 100px; border-radius:100px;">
                <h5 class="mt-2">@ViewBag.playerName2</h5>
            </div>
        </div>

        <input type="hidden" asp-for="IdMatch">
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
<div class="text-center">
    <a asp-action="Index" asp-route-id="@ViewBag.Id" class="btn btn-outline-primary btn-sm">Trở lại danh sách</a>
</div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
