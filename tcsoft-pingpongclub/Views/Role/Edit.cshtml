@model tcsoft_pingpongclub.Models.Role

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="stylesheet" href="/css/form-style.css">
</head>

<h1>Chỉnh sửa loại tài khoản</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRole" />
            <div class="form-group">
                <label asp-for="NameRole" class="control-label"></label>
                <p>@Model.NameRole</p>  <!-- Chỉ hiển thị tên Role mà không cho phép chỉnh sửa -->
                <span asp-validation-for="NameRole" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
