@model IEnumerable<tcsoft_pingpongclub.Models.Role>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/table-style.css">
</head>
<body>
    <h1>Quản lý loại tài khoản</h1>
    <p>
        <a asp-action="Create" class="btn-create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NameRole)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameRole)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdRole" class="btn-edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdRole" class="btn-edits">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdRole" class="btn-delete">Delete</a> |
                        <a asp-controller="PermissionRoles" asp-action="Index" asp-route-id="@item.IdRole" class="btn-edit">Permission</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
